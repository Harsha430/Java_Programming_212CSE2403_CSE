package q11059;

public class SequenceCheck {
    /**
     * Find the given elements present
     * consecutively in the array or not
     *
     *
     * @return result
     */
    public boolean sequenceCheck(int[] arr) {
        for (int i = 0; i <= arr.length - 3; i++) {
            if (arr[i] == 6 && arr[i + 1] == 9 &&
                    arr[i + 2] == 12) {
                return true;
            }
        }
        return false;
    }
}
