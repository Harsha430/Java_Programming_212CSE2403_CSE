package q11054;

public class ElementCheck {
    /**
     * Compute if the given elemetn is present in
     * the array only one time
     *
     *
     * @return true if it is present else return
     *         false
     */
    public boolean elementFinder(int[] arr, int element) {
        int c = 0;
        for (int n : arr) {
            if (n == element) {
                c++;
            }
        }
        if (c == 1) {
            return true;
        }
        return false;
    }
}
